.page {
  min-height: 100vh;
  background: #F8F9FA;
}

.header {
  background: linear-gradient(135deg, #FF8FAB 0%, #FF6B9D 100%);
  padding: 60rpx 32rpx 40rpx;
  border-radius: 0 0 40rpx 40rpx;
}

.header-top {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: 40rpx;
}

.greeting-text {
  display: block;
  font-size: 44rpx;
  font-weight: 700;
  color: #FFFFFF;
}

.date-text {
  display: block;
  font-size: 26rpx;
  color: rgba(255, 255, 255, 0.8);
  margin-top: 8rpx;
}

.avatar-img {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  border: 3rpx solid rgba(255, 255, 255, 0.6);
}


.baby-hero {
  position: relative;
  overflow: hidden;
  border-radius: 24rpx;
  margin-bottom: 18rpx;
  min-height: 180rpx;
  background: rgba(255, 255, 255, 0.22);
}

.baby-hero-bg {
  position: absolute;
  inset: 0;
  width: 100%;
  height: 100%;
  filter: blur(14rpx);
  transform: scale(1.15);
  opacity: 0.5;
}

.baby-hero-overlay {
  position: absolute;
  inset: 0;
  background: linear-gradient(120deg, rgba(255, 255, 255, 0.30), rgba(255, 255, 255, 0.10));
}

.baby-hero-content {
  position: relative;
  z-index: 1;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 20rpx 22rpx;
}

.baby-name {
  display: block;
  font-size: 40rpx;
  line-height: 1.2;
  font-weight: 700;
  color: #FFFFFF;
}

.baby-age {
  display: block;
  margin-top: 8rpx;
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.95);
}

.baby-metrics {
  display: flex;
  align-items: center;
  margin-top: 12rpx;
}

.baby-metric,
.baby-metric-divider {
  font-size: 22rpx;
  color: rgba(255, 255, 255, 0.92);
}

.baby-metric-divider { margin: 0 10rpx; }

.baby-avatar {
  width: 112rpx;
  height: 112rpx;
  border-radius: 50%;
  border: 3rpx solid rgba(255, 255, 255, 0.6);
}

.summary-cards {
  display: grid;
  grid-template-columns: 1fr;
  gap: 16rpx;
}

.summary-card {
  border-radius: 24rpx;
  padding: 22rpx 22rpx;
  background: rgba(255, 255, 255, 0.2);
  backdrop-filter: blur(8rpx);
}

.summary-card-combined {
  background: rgba(255, 255, 255, 0.24);
}

.summary-top-label {
  font-size: 28rpx;
  font-weight: 600;
  color: rgba(255, 255, 255, 0.95);
  margin-bottom: 14rpx;
}

.summary-combined-row {
  display: flex;
  align-items: center;
}

.summary-kpi-item {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.summary-kpi-num {
  font-size: 46rpx;
  font-weight: 700;
  color: #FFFFFF;
}

.summary-kpi-num.warning {
  color: #FFE066;
}

.summary-kpi-label {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.92);
  margin-top: 6rpx;
}

.summary-kpi-divider {
  width: 1rpx;
  height: 54rpx;
  background: rgba(255, 255, 255, 0.35);
}

.summary-card-milk,
.summary-card-food {
  display: flex;
  align-items: center;
}

.summary-card-milk .summary-num,
.summary-card-food .summary-num {
  font-size: 52rpx;
  font-weight: 700;
  color: #FFFFFF;
  width: 180rpx;
  line-height: 1.1;
}

.summary-card-milk .summary-label,
.summary-card-food .summary-label {
  font-size: 26rpx;
  font-weight: 600;
  color: rgba(255, 255, 255, 0.98);
  width: 170rpx;
}

.milk-breakdown {
  flex: 1;
  display: flex;
  gap: 12rpx;
}

.milk-item {
  flex: 1;
  background: rgba(255, 255, 255, 0.2);
  border-radius: 16rpx;
  padding: 10rpx 12rpx;
}

.milk-item-label {
  display: block;
  font-size: 22rpx;
  color: rgba(255, 255, 255, 0.90);
}

.milk-item-value {
  display: block;
  margin-top: 4rpx;
  font-size: 24rpx;
  color: #FFFFFF;
  font-weight: 600;
}

.summary-sub-count {
  margin-left: auto;
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.98);
  padding: 8rpx 14rpx;
  background: rgba(255, 255, 255, 0.22);
  border-radius: 999rpx;
}

.quick-actions {
  margin: 32rpx 32rpx 0;
}

.quick-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #666666;
  margin-bottom: 20rpx;
}

.quick-btns {
  display: flex;
  gap: 14rpx;
}

.quick-btn {
  flex: 1;
  background: #FFFFFF;
  border-radius: 20rpx;
  padding: 24rpx 8rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.06);
  transition: transform 0.15s ease, box-shadow 0.15s ease;
}

.quick-btn:active {
  transform: scale(0.96);
  box-shadow: 0 1rpx 6rpx rgba(0, 0, 0, 0.08);
}

.quick-icon {
  font-size: 44rpx;
}

.quick-text {
  font-size: 22rpx;
  color: #666666;
  margin-top: 10rpx;
}

.voice-section {
  margin: 24rpx 32rpx;
}

.voice-input-area {
  display: flex;
  align-items: center;
  background: #FFFFFF;
  border-radius: 50rpx;
  padding: 16rpx 24rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.06);
}

.voice-input {
  flex: 1;
  font-size: 28rpx;
  color: #333333;
}

.voice-btn {
  width: 72rpx;
  height: 72rpx;
  background: #FFF0F5;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-left: 16rpx;
  transition: all 0.2s;
}

.voice-btn.recording {
  background: #FF8FAB;
  animation: pulse 1s infinite;
}

@keyframes pulse {
  0% { transform: scale(1); }
  50% { transform: scale(1.1); }
  100% { transform: scale(1); }
}

.voice-icon {
  font-size: 36rpx;
}

.submit-btn {
  width: 100%;
  background: linear-gradient(135deg, #FF8FAB, #FF6B9D);
  color: #FFFFFF;
  border-radius: 50rpx;
  font-size: 30rpx;
  font-weight: 600;
  border: none;
  padding: 24rpx;
  margin-top: 16rpx;
}

.timeline-section {
  margin: 0 32rpx;
}

.view-all {
  font-size: 26rpx;
  color: #FF8FAB;
  padding: 8rpx 16rpx;
  background: rgba(255, 143, 171, 0.1);
  border-radius: 24rpx;
}

.timeline {
  position: relative;
  padding-left: 8rpx;
}

.timeline::before {
  content: '';
  position: absolute;
  left: 9rpx;
  top: 30rpx;
  bottom: 30rpx;
  width: 2rpx;
  background: linear-gradient(to bottom, #FF8FAB 0%, rgba(255, 143, 171, 0.2) 100%);
  border-radius: 1rpx;
}

.timeline-item {
  display: flex;
  margin-bottom: 20rpx;
  position: relative;
}

.timeline-dot {
  width: 20rpx;
  height: 20rpx;
  border-radius: 50%;
  background: #FF8FAB;
  margin-top: 24rpx;
  margin-right: 20rpx;
  flex-shrink: 0;
  box-shadow: 0 0 0 4rpx rgba(255, 143, 171, 0.2);
  z-index: 1;
}

.timeline-dot.breastfeeding { background: #FF8FAB; box-shadow: 0 0 0 4rpx rgba(255, 143, 171, 0.2); }
.timeline-dot.bottle { background: #FF8FAB; box-shadow: 0 0 0 4rpx rgba(255, 143, 171, 0.2); }
.timeline-dot.food { background: #F59E0B; box-shadow: 0 0 0 4rpx rgba(245, 158, 11, 0.2); }
.timeline-dot.swimming { background: #3B82F6; box-shadow: 0 0 0 4rpx rgba(59, 130, 246, 0.2); }
.timeline-dot.diaper { background: #22C55E; box-shadow: 0 0 0 4rpx rgba(34, 197, 94, 0.2); }
.timeline-dot.sleep { background: #8B5CF6; box-shadow: 0 0 0 4rpx rgba(139, 92, 246, 0.2); }

.timeline-content {
  flex: 1;
  padding: 24rpx;
  margin-bottom: 0;
  border-radius: 16rpx;
  background: #FFFFFF;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.05);
}

.record-icon {
  font-size: 32rpx;
  margin-right: 12rpx;
}

.record-type {
  font-size: 30rpx;
  font-weight: 600;
  margin-right: 12rpx;
}

.record-time {
  font-size: 26rpx;
  color: #999999;
}

.record-detail {
  margin-top: 12rpx;
  font-size: 36rpx;
  font-weight: 700;
  color: #FF8FAB;
}

.record-note {
  display: block;
  margin-top: 8rpx;
}

.record-actions {
  display: flex;
  justify-content: flex-end;
  margin-top: 16rpx;
  gap: 24rpx;
}

.action-btn {
  font-size: 24rpx;
  color: #999999;
}

.action-btn.danger {
  color: #FF4D4F;
}

.pending-section {
  margin: 0 32rpx 32rpx;
}

.pending-item {
  border-left: 6rpx solid #FFB800;
}

.quick-modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 1000;
}

.modal-mask {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
}

.modal-content {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  background: #FFFFFF;
  border-radius: 40rpx 40rpx 0 0;
  padding: 40rpx 32rpx 60rpx;
}

.modal-title {
  font-size: 36rpx;
  font-weight: 700;
  text-align: center;
  margin-bottom: 40rpx;
}

.amount-section {
  margin-bottom: 8rpx;
}

.amount-label {
  font-size: 28rpx;
  color: #666666;
  margin-bottom: 20rpx;
  margin-top: 24rpx;
  display: block;
}

.side-btns {
  display: flex;
  gap: 16rpx;
  margin-bottom: 24rpx;
}

.side-btn {
  flex: 1;
  padding: 16rpx 0;
  text-align: center;
  background: #F5F5F5;
  color: #666666;
  border-radius: 50rpx;
  font-size: 28rpx;
}

.side-btn.active {
  background: #FFF0F5;
  color: #FF8FAB;
  font-weight: 600;
}

.amount-btns {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
  margin-bottom: 24rpx;
}

.amount-btn {
  padding: 16rpx 32rpx;
  background: #FFF0F5;
  color: #FF8FAB;
  border-radius: 50rpx;
  font-size: 28rpx;
  font-weight: 600;
}

.amount-input {
  width: 100%;
  border: 2rpx solid #EEEEEE;
  border-radius: 16rpx;
  padding: 20rpx 24rpx;
  font-size: 30rpx;
  box-sizing: border-box;
  margin-bottom: 32rpx;
}

.modal-actions {
  display: flex;
  gap: 24rpx;
}

.modal-actions button {
  flex: 1;
}

.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 80rpx 32rpx;
  background: #FFFFFF;
  border-radius: 20rpx;
  margin-top: 16rpx;
}

.empty-state text:first-child {
  font-size: 80rpx;
  margin-bottom: 16rpx;
}

.empty-state text:nth-child(2) {
  font-size: 30rpx;
  color: #666666;
  margin-top: 0;
}

.empty-state text:nth-child(3) {
  font-size: 24rpx;
  color: #999999;
  margin-top: 8rpx;
}

.page-dark {
  background: #111827;
}

.page-dark .header,
.page-dark .quick-actions,
.page-dark .voice-section,
.page-dark .timeline-content,
.page-dark .pending-item,
.page-dark .summary-card,
.page-dark .card {
  background: #1f2937;
  border-color: rgba(255, 255, 255, 0.08);
}

.page-dark .greeting-text,
.page-dark .date-text,
.page-dark .quick-title,
.page-dark .section-title,
.page-dark .record-type,
.page-dark .record-time,
.page-dark .summary-label,
.page-dark .summary-num,
.page-dark .summary-top-label,
.page-dark .summary-kpi-label,
.page-dark .summary-kpi-num,
.page-dark .milk-item-label,
.page-dark .milk-item-value,
.page-dark .record-detail,
.page-dark .record-note,
.page-dark .action-btn,
.page-dark .view-all,
.page-dark .text-small,
.page-dark .text-gray {
  color: #e5e7eb !important;
}

.page-dark .voice-input {
  background: #111827;
  color: #f9fafb;
  border-color: rgba(255, 255, 255, 0.14);
}

