.page {
  padding: 24rpx 32rpx 120rpx;
}

.profile-card {
  margin-bottom: 24rpx;
}

.profile-info {
  display: flex;
  align-items: center;
}

.profile-avatar {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  margin-right: 24rpx;
  border: 3rpx solid #FFE0EC;
}

.profile-name {
  font-size: 34rpx;
  font-weight: 700;
  display: block;
}

.profile-family {
  display: block;
  margin-top: 8rpx;
}

.login-btn {
  background: linear-gradient(135deg, #FF8FAB, #FF6B9D);
  color: #FFFFFF;
  border-radius: 50rpx;
  font-size: 26rpx;
  border: none;
  padding: 16rpx 32rpx;
}

.section-card {
  margin-bottom: 24rpx;
}

.section-title-text {
  font-size: 30rpx;
  font-weight: 700;
  margin-bottom: 24rpx;
  color: #333333;
}

.setting-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 24rpx 0;
  border-bottom: 1rpx solid #F5F5F5;
}

.setting-item:last-child {
  border-bottom: none;
}

.setting-left {
  display: flex;
  align-items: center;
}

.setting-icon {
  font-size: 36rpx;
  margin-right: 20rpx;
}

.setting-label {
  font-size: 30rpx;
  color: #333333;
}

.setting-arrow {
  font-size: 36rpx;
  color: #CCCCCC;
}

.member-count {
  font-size: 26rpx;
  color: #FF8FAB;
}

.bot-status {
  display: flex;
  align-items: center;
  margin-bottom: 16rpx;
  padding: 16rpx;
  background: #F8F9FA;
  border-radius: 12rpx;
}

.status-dot {
  width: 16rpx;
  height: 16rpx;
  border-radius: 50%;
  background: #CCCCCC;
  margin-right: 12rpx;
}

.status-dot.active {
  background: #22C55E;
}

.status-text {
  font-size: 26rpx;
  color: #666666;
}

.bot-guide, .siri-guide {
  background: #FFF8FA;
  border-radius: 16rpx;
  padding: 20rpx 24rpx;
  margin-top: 16rpx;
}

.guide-title {
  display: block;
  font-size: 26rpx;
  font-weight: 600;
  color: #555555;
  margin-bottom: 12rpx;
}

.guide-step {
  display: block;
  font-size: 24rpx;
  color: #666666;
  margin-bottom: 8rpx;
  line-height: 1.6;
}

.guide-tip {
  display: block;
  font-size: 22rpx;
  color: #FF8FAB;
  margin-top: 12rpx;
}

.siri-config {
  margin-top: 16rpx;
}

.config-label {
  display: block;
  font-size: 24rpx;
  color: #666666;
  margin-bottom: 8rpx;
}

.config-value {
  display: flex;
  align-items: center;
  justify-content: space-between;
  background: #F5F5F5;
  border-radius: 12rpx;
  padding: 16rpx 20rpx;
}

.api-url {
  font-size: 22rpx;
  color: #333333;
  flex: 1;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.copy-btn {
  font-size: 24rpx;
  color: #FF8FAB;
  margin-left: 16rpx;
  flex-shrink: 0;
}

.version-info {
  text-align: center;
  padding: 32rpx 0;
}

.version-text {
  display: block;
  font-size: 26rpx;
  color: #999999;
}

.version-desc {
  display: block;
  margin-top: 8rpx;
  padding: 0 32rpx;
  line-height: 1.6;
}

.invite-modal, .join-modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 1000;
}

.modal-mask {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
}

.modal-content {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  background: #FFFFFF;
  border-radius: 40rpx 40rpx 0 0;
  padding: 48rpx 32rpx 60rpx;
}

.modal-title {
  font-size: 36rpx;
  font-weight: 700;
  text-align: center;
  margin-bottom: 40rpx;
}

.invite-code-display {
  text-align: center;
  background: #FFF0F5;
  border-radius: 20rpx;
  padding: 32rpx;
  margin-bottom: 24rpx;
}

.invite-code {
  font-size: 72rpx;
  font-weight: 900;
  color: #FF8FAB;
  letter-spacing: 16rpx;
}

.invite-tip {
  display: block;
  font-size: 26rpx;
  color: #666666;
  text-align: center;
  margin-bottom: 32rpx;
  line-height: 1.6;
}

.join-input {
  border: 2rpx solid #EEEEEE;
  border-radius: 16rpx;
  padding: 24rpx;
  font-size: 36rpx;
  text-align: center;
  letter-spacing: 8rpx;
  margin-bottom: 32rpx;
}


.baby-list {
  margin-bottom: 20rpx;
}

.baby-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 16rpx 0;
  border-bottom: 1rpx solid #F5F5F5;
}

.baby-item:last-child {
  border-bottom: none;
}

.baby-item-main {
  display: flex;
  align-items: center;
  flex: 1;
}

.baby-item-avatar {
  width: 72rpx;
  height: 72rpx;
  border-radius: 50%;
  margin-right: 16rpx;
}

.baby-item-info {
  flex: 1;
  min-width: 0;
}

.baby-item-name {
  display: block;
  font-size: 28rpx;
  font-weight: 600;
}

.baby-item-meta {
  display: block;
  margin-top: 6rpx;
}

.baby-item-tag {
  font-size: 20rpx;
  color: #FF6B9D;
  background: #FFEAF2;
  border-radius: 20rpx;
  padding: 4rpx 12rpx;
  margin-right: 16rpx;
}

.baby-item-edit {
  font-size: 24rpx;
  color: #FF8FAB;
  margin-left: 16rpx;
}

.baby-item-ops {
  display: flex;
  align-items: center;
  gap: 16rpx;
  margin-left: 16rpx;
}

.baby-item-delete {
  font-size: 24rpx;
  color: #FF4D4F;
}

.field-wrap {
  margin-bottom: 24rpx;
}

.field-label {
  display: block;
  font-size: 24rpx;
  color: #777;
  margin-bottom: 10rpx;
}

.picker-input {
  border: 2rpx solid #EEEEEE;
  border-radius: 16rpx;
  padding: 22rpx 24rpx;
  font-size: 30rpx;
  color: #333;
  background: #fff;
}

.photo-uploader {
  border: 2rpx dashed #F3C3D4;
  border-radius: 16rpx;
  padding: 20rpx;
  background: #FFF8FB;
}

.photo-preview,
.photo-placeholder {
  width: 140rpx;
  height: 140rpx;
  border-radius: 16rpx;
}

.photo-placeholder {
  display: flex;
  align-items: center;
  justify-content: center;
  color: #999;
  font-size: 24rpx;
  background: #fff;
  border: 2rpx dashed #eee;
}

.photo-buttons {
  display: flex;
  gap: 12rpx;
  margin-top: 16rpx;
}

.btn-small {
  font-size: 24rpx;
  padding: 12rpx 20rpx;
  line-height: 1.2;
}


.profile-editor {
  display: flex;
  align-items: center;
  gap: 20rpx;
  margin-bottom: 20rpx;
}

.avatar-btn {
  background: transparent;
  border: none;
  padding: 0;
  margin: 0;
  line-height: 1;
  min-width: auto;
  width: auto;
}

.profile-form {
  flex: 1;
  min-width: 0;
}

.profile-name-input {
  width: 100%;
  border: 2rpx solid #F0DCE4;
  border-radius: 14rpx;
  padding: 12rpx 16rpx;
  font-size: 28rpx;
  box-sizing: border-box;
  margin-bottom: 12rpx;
}

.profile-role {
  font-size: 25rpx;
  color: #555;
  background: #FFF7FA;
  border: 2rpx solid #F5E5EC;
  border-radius: 12rpx;
  padding: 10rpx 14rpx;
  margin-bottom: 10rpx;
}


.profile-save-btn {
  width: 100%;
  margin-top: 10rpx;
}

.page-dark {
  background: #111827;
}

.page-dark .card {
  background: #1F2937;
  box-shadow: none;
}

.page-dark .section-title-text,
.page-dark .setting-label,
.page-dark .profile-role,
.page-dark .profile-name-input,
.page-dark .status-text,
.page-dark .api-url,
.page-dark .version-text {
  color: #E5E7EB;
}

.page-dark .setting-item {
  border-bottom-color: #374151;
}

.page-dark .profile-name-input,
.page-dark .profile-role,
.page-dark .config-value,
.page-dark .bot-guide,
.page-dark .siri-guide {
  background: #111827;
  border-color: #374151;
}

.page-dark .text-gray,
.page-dark .version-desc,
.page-dark .guide-step,
.page-dark .config-label {
  color: #9CA3AF;
}
